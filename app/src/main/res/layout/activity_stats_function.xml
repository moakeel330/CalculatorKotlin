<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".StatsFunction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics Functions"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/EnterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Enter number:"
            android:textColor="@color/hintText"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/numberInput"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/EnterNumber"
            android:paddingLeft="15dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="241dp"
            android:layout_height="1dp"
            android:layout_below="@+id/numberInput"
            android:background="#936400"
            android:layout_marginLeft="160dp"
            />

    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#936400"
        android:text="Add" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="131dp">

        <TextView
            android:id="@+id/memoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Numbers stored in memory:"
            android:textColor="@color/hintText"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/memoryTxt"
            android:backgroundTint="#936400"
            android:text="clear" />

        <EditText
            android:id="@+id/memoryInput"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memoryTxt"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <View
            android:layout_width="264dp"
            android:layout_height="1dp"
            android:layout_below="@+id/memoryInput"
            android:background="#936400"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Average"
            android:backgroundTint="#936400"
            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#936400"
            android:text="find Min and nax"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:textColor="@color/hintText"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <EditText
        android:id="@+id/answerDisplay"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

        <View
            android:layout_width="264dp"
            android:layout_height="1dp"
            android:layout_below="@+id/answerDisplay"
            android:background="#936400"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/btnBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Calculator"
        android:layout_marginTop="25dp"
        android:backgroundTint="#936400"
        android:layout_gravity="center_horizontal"
        />










</LinearLayout>