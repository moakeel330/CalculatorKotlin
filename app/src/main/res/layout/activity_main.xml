<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/number1"
            android:layout_width="141dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:hint="1st Number"
            android:inputType="numberSigned"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/hintText" />

        <TextView
            android:id="@+id/operatorSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp"
            />

        <EditText
            android:id="@+id/number2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:hint="2nd Number"
            android:inputType="numberSigned"
            android:textColor="@color/white"
            android:textColorHint="@color/hintText"
            android:paddingLeft="30dp"
            android:text=""
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="27dp"
            android:text="+"
            android:textSize="18sp"
            android:backgroundTint="#936400"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="27dp"
            android:text="-"
            android:textSize="18sp"
            android:backgroundTint="#936400"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="27dp"
            android:text="รท"
            android:textSize="18sp"
            android:backgroundTint="#936400"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="27dp"
            android:backgroundTint="#936400"
            android:text="ร"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btnSq"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#936400"
            android:text="SQUARE ROOT"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnPow"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#936400"
            android:text="POWER"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btnStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FF018786"
        android:text="STATISTICS FUNCTIONS"
        android:textColor="@color/white" />

</LinearLayout>